{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "storageAccountName": "[toLower(concat('st', uniqueString(resourceGroup().id)))]",
        "containerBaseName": "logs",
        "containerCount": 3
    },
    "resources": [
        {
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-05-01",
            "tags": {
                "description": "Storage account for multiple containers"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2023-05-01",
            "name": "[concat(variables('storageAccountName'), '/default/', variables('containerBaseName'), copyIndex(1))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ],
            "copy": {
                "name": "containercopy",
                "count": "[variables('containerCount')]"
            },
            "properties": {
                "publicAccess": "None"
            }
        }
    ],
    "outputs": {}
}
